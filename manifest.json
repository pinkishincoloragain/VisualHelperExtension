{
  "name": "VisualHelper - Chrome extension",
  "description": "Chrome extension for modifying web page",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/modify/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "options_page": "options.html",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/VH_16.ico",
      "32": "/images/VH_32.ico",
      "48": "/images/VH_48.ico",
      "128": "/images/VH_128.ico"
    }
  },
  "icons": {
    "16": "/images/VH_16.ico",
    "32": "/images/VH_32.ico",
    "48": "/images/VH_48.ico",
    "128": "/images/VH_128.ico"
  }
}
