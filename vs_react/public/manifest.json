{
  "manifest_version": 3,
  "name": "VisualHelper",
  "version": "0.1",
  "description": "Web transformer chrome extension",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "author": "Myungbin Son",
  "homepage_url": "https://github.com/pinkishincoloragain/",
  "short_name": "VH",
  "action": {
    "default_popup": "popup.html",
    "default_title": "VisualHelper",
    "default_icon": {
      "16": "/images/VH_16.ico",
      "32": "/images/VH_32.ico",
      "48": "/images/VH_48.ico",
      "128": "/images/VH_128.ico"
    }
  },
  "icons": {
    "16": "/images/VH_16.ico",
    "32": "/images/VH_32.ico",
    "48": "/images/VH_48.ico",
    "128": "/images/VH_128.ico"
  }
}
